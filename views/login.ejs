<body>
<header>
    <img src="/imgs/logo_login.svg" alt="logo">
</header>
<div class="container">
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
</div>
<div class="split-form">
    <div class="image-side">
        <h2>Witam ponownie!</h2>
        <p>Podaj dane aby się zalogować.</p>
    </div>
    <div class="form-side">
        <h2>Zaloguj się</h2>
        <form>
            <input type="text" id="username" placeholder="Login" required>
            <input type="password" id="password" placeholder="Hasło" required>
            <button type="submit">Zaloguj</button>
        </form>s
    </div>
</div>
